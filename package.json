{
  "name": "lydie",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "sst dev",
    "db:push": "bun --filter=@lydie/database db:push",
    "db:sync": "bun --filter=@lydie/database db:sync-zero-publication",
    "db:studio": "bun --filter=@lydie/database db:studio",
    "deploy:prod": "sst deploy --stage production",
    "deploy:web": "sst deploy --target Web --stage production",
    "sso": "aws sso login --sso-session=lydie --use-device-code",
    "sdk:publish": "bun --filter=@lydie-app/sdk sdk:publish",
    "test:e2e": "bun --filter=@lydie/web test:e2e",
    "copy-integration-assets": "bun --filter=@trawle/scripts copy-integration-assets"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.5",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.8",
    "@types/bun": "^1.3.4",
    "sst": "catalog:",
    "typescript": "^5.9.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@rocicorp/zero": "0.25.3",
      "sst": "3.17.21",
      "zod": "^4.1.12",
      "drizzle-orm": "^1.0.0-beta.2-58a4521",
      "better-auth": "1.4.7-beta.2",
      "@polar-sh/better-auth": "1.1.9",
      "@ai-sdk/google": "^3.0.0-beta.69",
      "@ai-sdk/openai": "^3.0.0-beta.90",
      "ai": "^6.0.0-beta.145"
    }
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ]
}
