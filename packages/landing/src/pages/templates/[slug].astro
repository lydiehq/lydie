---
import { Container } from "../../components/Container";
import Layout from "../../layouts/Layout.astro";
import { getIntegration } from "../../utils/integrations";
import { ChevronLeft } from "lucide-react";
import { templates } from "../../templates";

export async function getStaticPaths() {
  return templates.map((template) => ({
    params: { slug: template.id },
  }));
}

const { slug } = Astro.params;
const template = templates.find((template) => template.id === slug);

if (!template) {
  return new Response(null, {
    status: 404,
    statusText: "Template not found",
  });
}
---

<Layout
  title={`${template.title} - Templates - Lydie`}
  description={template.description}
>
  <Container className="flex flex-col gap-y-8">
    <a
      href="/templates"
      class="flex items-center gap-x-1.5 text-sm text-gray-600 hover:text-gray-900 transition-colors w-fit"
    >
      <ChevronLeft className="size-4" />
      Back to templates
    </a>
  </Container>
</Layout>
