---
import { Container } from "../../components/Container";
import Layout from "../../layouts/Layout.astro";

const integrations = [
  {
    id: "github",
    title: "GitHub",
    description: "Sync documents as Markdown files to a GitHub repository",
  },
  {
    id: "shopify",
    title: "Shopify Blog",
    description: "Publish documents to your Shopify blog",
  },
  {
    id: "wordpress",
    title: "WordPress",
    description:
      "Sync content to your self-hosted WordPress site using Application Passwords.",
  },
];
---

<Layout
  title="Integrations - Lydie"
  description="Integrations for Lydie. Connect your documents to external platforms."
>
  <Container className="flex flex-col gap-y-12">
    <div class="flex flex-col gap-y-4">
      <h1
        class="text-2xl font-heading font-medium tracking-tight text-gray-800"
      >
        Integrations
      </h1>
      <p class="text-[15px]/relaxed text-gray-600 max-w-[65ch] text-balance">
        Connect your documents to external platforms and services. Sync content
        to GitHub, publish to Shopify, or integrate with WordPress.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        integrations.map((integration) => (
          <div class="flex flex-col gap-y-2 p-4 rounded-xl border border-gray-200 bg-white hover:border-gray-300 transition-all">
            <h3 class="text-base font-medium text-gray-900">
              {integration.title}
            </h3>
            <p class="text-[0.8125rem] text-gray-600">
              {integration.description}
            </p>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
