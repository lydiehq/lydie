---
import Layout from "../layouts/Layout.astro";
import { Container } from "../components/Container";
import { Eyebrow } from "../components/landing/Eyebrow";
import { Check, Clock, Circle } from "lucide-react";

type RoadmapItem = {
  title: string;
  description: string;
  status: "completed" | "in-progress" | "planned";
};

const roadmapItems: RoadmapItem[] = [
  {
    title: "Real-time collaboration",
    description: "Collaborate with others in real-time.",
    status: "planned",
  },
  {
    title: "Desktop app",
    description:
      "Native desktop application for an installable experience across platforms.",
    status: "planned",
  },
  {
    title: "DOCX/PDF exports",
    description: "Export your documents to DOCX and PDF formats.",
    status: "planned",
  },
  {
    title: "Cross-platform publishing",
    description:
      "Allow third-party publishing to platforms like Shopify and WordPress, with syncing capabilities.",
    status: "planned",
  },
  {
    title: "LLM selection",
    description: "Choose which LLM to use for AI-powered features.",
    status: "planned",
  },
  {
    title: "Trash",
    description: "Retrieve previously deleted documents from trash.",
    status: "planned",
  },
  {
    title: "Diff view",
    description: "Proper diff view when applying changes to a document.",
    status: "planned",
  },
  {
    title: "Cross-document referencing",
    description:
      "Allow referencing other documents in LLM-chats using '@'-mentions.",
    status: "planned",
  },
  {
    title: "LLM web search",
    description: "Allow LLM to search the web for information.",
    status: "planned",
  },
  {
    title: "Document history",
    description:
      "Track every change with full version history, so you never lose your work.",
    status: "planned",
  },
];

function getStatusIcon(status: string) {
  switch (status) {
    case "completed":
      return Check;
    case "in-progress":
      return Clock;
    default:
      return Circle;
  }
}

function getStatusLabel(status: string) {
  switch (status) {
    case "completed":
      return "Completed";
    case "in-progress":
      return "In Progress";
    default:
      return "Planned";
  }
}
---

<Layout
  title="Roadmap - Lydie"
  description="See what we're building and what's coming next for Lydie."
>
  <div class="flex flex-col gap-y-10 py-8 md:py-12">
    <Container className="flex flex-col gap-y-4 text-center">
      <Eyebrow>Roadmap</Eyebrow>
      <h1
        class="text-4xl md:text-5xl font-heading font-medium tracking-tight text-gray-800"
      >
        What we're building
      </h1>
      <p
        class="text-[15px]/relaxed text-gray-600 max-w-2xl mx-auto text-balance"
      >
        Our roadmap shows what we've shipped, what we're working on, and what's
        coming next.
      </p>
    </Container>

    <Container className="flex flex-col gap-y-4">
      <div
        class="flex flex-col divide-y divide-gray-200 border border-gray-200 rounded-xl"
      >
        {
          roadmapItems.map((item) => {
            const StatusIcon = getStatusIcon(item.status);
            const statusLabel = getStatusLabel(item.status);

            return (
              <div class="flex items-start gap-4 p-3 first:rounded-t-xl last:rounded-b-xl">
                <div class="flex-1 flex flex-col gap-y-1">
                  <div class="flex items-center gap-x-2">
                    <h3 class="font-medium text-gray-900">{item.title}</h3>
                    <div class="w-px h-3 bg-gray-200" />
                    <div class="flex items-center gap-x-1 shrink-0">
                      <StatusIcon className="size-3" />
                      <span class="text-xs font-medium text-gray-600 tracking-wide">
                        {statusLabel}
                      </span>
                    </div>
                  </div>

                  <p class="text-[0.8125rem]/relaxed text-gray-600">
                    {item.description}
                  </p>
                </div>
              </div>
            );
          })
        }
      </div>
    </Container>

    <Container className="flex flex-col gap-y-4 text-center">
      <div
        class="flex flex-col gap-y-3 p-6 rounded-xl border border-gray-200 bg-gray-50/50"
      >
        <h2
          class="text-xl font-heading font-medium tracking-tight text-gray-800"
        >
          Have a feature request?
        </h2>
        <p class="text-sm text-gray-600 max-w-xl mx-auto text-balance">
          We'd love to hear your ideas. Share your feedback and help shape the
          future of Lydie.
        </p>
        <div class="flex items-center justify-center">
          <a
            href="https://github.com/lsalling/lydie/issues"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-medium text-gray-700 hover:text-gray-900 underline"
          >
            Open an issue on GitHub
          </a>
        </div>
      </div>
    </Container>
  </div>
</Layout>
