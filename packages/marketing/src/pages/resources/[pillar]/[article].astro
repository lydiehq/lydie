---
export const prerender = false;

// ISR-like caching: CDN caches for 1 hour, serves stale for 24 hours while revalidating
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400",
);

import Layout from "@/layouts/Layout.astro";
import { Container } from "@/components/Container";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import { lydieClient } from "@/utils/lydie-client";
import { createLinkResolver } from "@/utils/route-registry";
import { renderContent, blogImageComponent } from "@/utils/content-renderer";
import {
  linkGridComponent,
  comparisonGridComponent,
} from "@/utils/custom-components";

const { pillar, article } = Astro.params;

if (!pillar || !article) {
  return new Response(null, { status: 404 });
}

// Map pillar slugs to document slugs in Lydie
const pillarSlugMap: Record<string, string> = {
  "knowledge-bases": "knowledge-bases",
  "note-taking": "note-taking",
};

const pillarSlug = pillarSlugMap[pillar] || pillar;

let articleDocument: any = null;
let contentHtml = "";
let toc: any[] = [];

console.log(`[Resource Hub] Fetching article: ${pillarSlug}/${article}`);

try {
  // Fetch the article document
  articleDocument = await lydieClient.getDocument(article, {
    toc: true,
    related: true,
  });

  toc = articleDocument.toc || [];

  // Render the content with custom components
  const { html } = await renderContent(articleDocument.jsonContent, {
    components: {
      image: blogImageComponent,
      linkGrid: linkGridComponent,
      comparisonGrid: comparisonGridComponent,
    },
    linkResolver: createLinkResolver(),
  });
  contentHtml = html;
} catch (error) {
  console.error(`[Resource Hub] Failed to fetch article ${article}:`, error);
  return new Response(null, { status: 404 });
}
---

<Layout
  title={articleDocument.title}
  description={articleDocument.customFields?.description ||
    articleDocument.title}
>
  <div class="py-8">
    <Container>
      <Breadcrumbs
        items={[
          { label: "Resources", href: "/resources" },
          { label: pillar.replace(/-/g, " "), href: `/resources/${pillar}` },
          { label: articleDocument.title },
        ]}
      />

      <div class="flex gap-8 mt-8">
        {/* Table of Contents Sidebar */}
        {
          toc.length > 0 && (
            <aside class="hidden lg:block w-64 shrink-0">
              <nav class="sticky top-24">
                <h2 class="text-sm font-semibold text-gray-900 mb-4 uppercase tracking-wider">
                  On this page
                </h2>
                <ul class="space-y-2 text-sm">
                  {toc.map((heading) => (
                    <li class={`${heading.level === 2 ? "" : "ml-4"}`}>
                      <a
                        href={`#${heading.id}`}
                        class="text-gray-600 hover:text-blue-600 transition-colors line-clamp-2"
                      >
                        {heading.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </aside>
          )
        }

        {/* Main Content */}
        <article class="flex-1 max-w-3xl">
          <header class="mb-8">
            <h1 class="text-3xl font-semibold text-gray-900">
              {articleDocument.title}
            </h1>
            {
              articleDocument.customFields?.description && (
                <p class="text-lg text-gray-600 mt-4">
                  {articleDocument.customFields.description}
                </p>
              )
            }
          </header>

          <div class="prose prose-lg max-w-none">
            <Fragment set:html={contentHtml} />
          </div>

          {/* Related Articles */}
          {
            articleDocument.related && articleDocument.related.length > 0 && (
              <section class="mt-16 pt-8 border-t border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                  Related Articles
                </h2>
                <div class="grid gap-4">
                  {articleDocument.related.map((doc: any) => (
                    <a
                      href={`/resources/${pillar}/${doc.slug}`}
                      class="group block p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-500/50 hover:shadow-md transition-all"
                    >
                      <h3 class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors">
                        {doc.title}
                      </h3>
                    </a>
                  ))}
                </div>
              </section>
            )
          }
        </article>
      </div>
    </Container>
  </div>
</Layout>
