---
export const prerender = false;

// ISR-like caching: CDN caches for 1 hour, serves stale for 24 hours while revalidating
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400",
);

import Layout from "@/layouts/Layout.astro";
import { Container } from "@/components/Container";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import * as lydieApi from "@/utils/lydie-client";
import { createLinkResolver } from "@/utils/route-registry";
import { renderContent, blogImageComponent } from "@/utils/content-renderer";
import {
  linkGridComponent,
  comparisonGridComponent,
} from "@/utils/custom-components";

const { pillar, article } = Astro.params;

if (!pillar || !article) {
  return new Response(null, { status: 404 });
}

// Map pillar slugs to collection IDs
const pillarCollectionMap: Record<string, string> = {
  "knowledge-bases": lydieApi.collections.knowledgeBases,
  "note-taking": lydieApi.collections.noteTaking,
};

const collectionId = pillarCollectionMap[pillar] || pillar;

type ArticleDocument = Awaited<
  ReturnType<typeof lydieApi.getCollectionDocuments>
>["documents"][number] & {
  toc?: Array<{ id: string; level: number; text: string }>;
  related?: Array<{ id: string; title: string; fields?: { slug?: string } }>;
};

let articleDocument: ArticleDocument | null = null;
let contentHtml = "";
let toc: Array<{ id: string; level: number; text: string }> = [];
const linkResolver = createLinkResolver({ currentCollectionId: collectionId });

console.log(`[Resource Hub] Fetching article: ${collectionId}/${article}`);

try {
  const { documents } = await lydieApi.getCollectionDocuments(collectionId, {
    includeToc: true,
    includeRelated: true,
    filters: { slug: article },
  });

  articleDocument = (documents[0] as ArticleDocument | undefined) || null;

  if (!articleDocument) {
    throw new Error("Article not found");
  }

  toc = articleDocument.toc || [];

  // Render the content with custom components
  const { html } = await renderContent(articleDocument.jsonContent as import("@lydie-app/sdk").ContentNode, {
    components: {
      image: blogImageComponent,
      linkGrid: linkGridComponent,
      comparisonGrid: comparisonGridComponent,
    },
    linkResolver,
  });
  contentHtml = html;
} catch (error) {
  console.error(`[Resource Hub] Failed to fetch article ${article}:`, error);
  return new Response(null, { status: 404 });
}
---

<Layout
  title={articleDocument?.title || "Article"}
  description={String(articleDocument?.fields?.description ||
    articleDocument?.title || "Article")}
>
  <div class="py-8">
    <Container>
      <Breadcrumbs
        items={[
          { label: "Resources", href: "/resources" },
          { label: pillar.replace(/-/g, " "), href: `/resources/${pillar}` },
          { label: articleDocument.title },
        ]}
      />

      <div class="flex gap-8 mt-8">
        {/* Table of Contents Sidebar */}
        {
          toc.length > 0 && (
            <aside class="hidden lg:block w-64 shrink-0">
              <nav class="sticky top-24">
                <h2 class="text-sm font-semibold text-gray-900 mb-4 uppercase tracking-wider">
                  On this page
                </h2>
                <ul class="space-y-2 text-sm">
                  {toc.map((heading) => (
                    <li class={`${heading.level === 2 ? "" : "ml-4"}`}>
                      <a
                        href={`#${heading.id}`}
                        class="text-gray-600 hover:text-blue-600 transition-colors line-clamp-2"
                      >
                        {heading.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </aside>
          )
        }

        {/* Main Content */}
        <article class="flex-1 max-w-3xl">
          <header class="mb-8">
            <h1 class="text-3xl font-semibold text-gray-900">
            {articleDocument?.title}
            </h1>
            {
              articleDocument?.fields?.description && (
                <p class="text-lg text-gray-600 mt-4">
                  {articleDocument.fields?.description}
                </p>
              )
            }
          </header>

          <div class="prose prose-lg max-w-none">
            <Fragment set:html={contentHtml} />
          </div>

          {/* Related Articles */}
          {
            articleDocument?.related && articleDocument.related.length > 0 && (
              <section class="mt-16 pt-8 border-t border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                  Related Articles
                </h2>
                <div class="grid gap-4">
                  {articleDocument.related.map((doc) => (
                    <a
                      href={`/resources/${pillar}/${doc.fields?.slug || doc.id}`}
                      class="group block p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-500/50 hover:shadow-md transition-all"
                    >
                      <h3 class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors">
                        {doc.title}
                      </h3>
                    </a>
                  ))}
                </div>
              </section>
            )
          }
        </article>
      </div>
    </Container>
  </div>
</Layout>
