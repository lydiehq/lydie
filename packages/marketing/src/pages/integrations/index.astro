---
import { Container } from "../../components/Container";
import Layout from "../../layouts/Layout.astro";
import { integrations } from "../../utils/integrations";
---

<Layout
  title="Integrations - Lydie"
  description="Integrations for Lydie. Connect your documents to external platforms."
>
  <Container className="flex flex-col gap-y-12">
    <div class="flex flex-col gap-y-4">
      <h1
        class="text-2xl font-heading font-medium tracking-tight text-gray-800"
      >
        Integrations
      </h1>
      <p class="text-[15px]/relaxed text-gray-600 max-w-[65ch] text-balance">
        Lydie integrations allow you to connect to external platforms and
        services, making it easy to sync your documents to your favorite tools.

        <br />
        <br />
        Missing an integration? <a
          href="https://github.com/lydiehq/lydie/issues/new?labels=integration&title=Integration+Request%3A+"
          target="_blank"
          class="text-gray-900 hover:text-gray-800 transition-colors"
          >Let us know</a
        >.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        integrations.map((integration) => (
          <a
            href={`/integrations/${integration.id}`}
            class="flex flex-col gap-y-3 p-4 rounded-xl border border-gray-200 bg-white hover:border-gray-300 transition-all group"
          >
            {integration.icon && (
              <img
                src={`/integrations/${integration.id}/assets/${integration.icon}`}
                alt={`${integration.title} logo`}
                class="w-12 h-12 object-contain"
              />
            )}
            <div class="flex flex-col gap-y-1">
              <h3 class="text-base font-medium text-gray-900 group-hover:text-gray-800">
                {integration.title}
              </h3>
              <p class="text-[0.8125rem] text-gray-600">
                {integration.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </Container>
</Layout>
