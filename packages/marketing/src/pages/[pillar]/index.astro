---
export const prerender = false;

// ISR-like caching: CDN caches for 1 hour, serves stale for 24 hours while revalidating
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400",
);

import Layout from "@/layouts/Layout.astro";
import ArticleHeadingEnhancements from "@/components/ArticleHeadingEnhancements.astro";
import { Container } from "@/components/Container";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import PillarTOC from "@/components/PillarTOC.astro";
import * as lydieApi from "@/utils/lydie-client";
import { createLinkResolver } from "@/utils/route-registry";
import { articleTypographyClassName } from "@/utils/article-typography";
import { renderContent, blogImageComponent } from "@/utils/content-renderer";
import {
  flowchartComponent,
  pillarCalloutComponent,
} from "@/utils/custom-components";

const { pillar } = Astro.params;

if (!pillar) {
  throw new Error("Pillar is required");
}

const pillarCollectionMap: Record<string, string> = {
  "knowledge-bases": lydieApi.collections.knowledgeBases,
  "note-taking": lydieApi.collections.noteTaking,
};

const collectionHandle = pillarCollectionMap[pillar] || pillar;

type CollectionDocument = Awaited<
  ReturnType<typeof lydieApi.getCollectionDocuments>
>["documents"][number] & {
  path?: string;
};

let pillarDocument: CollectionDocument | null = null;
let childDocuments: CollectionDocument[] = [];
let pillarDocumentsForToc: Array<
  CollectionDocument & { toc?: Array<{ id: string; level: number; text: string }> }
> = [];
let contentHtml = "";
const linkResolver = createLinkResolver({
  currentCollectionHandle: collectionHandle,
});

console.log(`[Resource Hub] Fetching pillar: ${collectionHandle}`);

try {
  // Fetch the pillar root document by explicit route
  pillarDocument = (await lydieApi.getCollectionDocumentByRoute(collectionHandle, "/", {
    includeToc: true,
  })) as CollectionDocument;

  if (!pillarDocument) {
    throw new Error("Pillar not found");
  }

  const currentPillarDocument = pillarDocument;

  // Fetch children of this document (same pattern as blog)
  const { documents: children } = await lydieApi.getCollectionDocuments(collectionHandle, {
    sortBy: "created_at",
    sortOrder: "asc",
  } as any);
  childDocuments = children;
  pillarDocumentsForToc = childDocuments.map((doc) =>
    doc.id === currentPillarDocument.id
      ? {
          ...doc,
          toc: (currentPillarDocument as CollectionDocument & {
            toc?: Array<{ id: string; level: number; text: string }>;
          }).toc,
        }
      : doc,
  );

  if (!pillarDocumentsForToc.some((doc) => doc.id === currentPillarDocument.id)) {
    pillarDocumentsForToc = [
      currentPillarDocument as CollectionDocument & {
        toc?: Array<{ id: string; level: number; text: string }>;
      },
      ...pillarDocumentsForToc,
    ];
  }

  // Render the content with custom components
  const { html } = await renderContent(
    pillarDocument.jsonContent as import("@lydie-app/sdk").ContentNode,
    {
      components: {
        image: blogImageComponent,
        pillarCallout: pillarCalloutComponent,
        flowchart: flowchartComponent,
      },
      linkResolver,
    },
  );
  contentHtml = html;
} catch (error) {
  console.error(
    `[Resource Hub] Failed to fetch pillar ${collectionHandle}`,
    error,
  );
  return new Response(null, { status: 404 });
}
---

<Layout
  title={pillarDocument?.title || "Resources"}
  description={String(
    pillarDocument?.fields?.description ||
      `Learn about ${pillarDocument?.title || "Resources"}`,
  )}
>
  <div class="py-8">
    <Container>
      <Breadcrumbs
        items={[
          { label: "Home", href: "/" },
          { label: pillarDocument?.title || "Resources" },
        ]}
      />

      <div class="flex gap-8 mt-8">
        {pillarDocumentsForToc.length > 0 && pillarDocument && (
          <aside class="hidden lg:block w-72 shrink-0">
            <PillarTOC
              documents={pillarDocumentsForToc}
              currentDocumentId={pillarDocument.id}
              pillar={pillar}
            />
          </aside>
        )}

        <article class="flex-1 max-w-[65ch]">
          <header class="mb-12">
            <h1 class="text-5xl font-semibold text-gray-900">
              {pillarDocument?.title}
            </h1>
            {
              pillarDocument.fields?.description && (
                <p class="text-lg text-gray-600">
                  {pillarDocument.fields.description}
                </p>
              )
            }
          </header>

          <div class={articleTypographyClassName}>
            <Fragment set:html={contentHtml} />
          </div>
          <ArticleHeadingEnhancements />

          {
            childDocuments.length > 0 && (
              <section class="mt-16 pt-8 border-t border-gray-200">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">
                  Related Articles
                </h2>
                <div class="grid md:grid-cols-2 gap-5">
                  {childDocuments
                    .filter((doc) => doc.id !== pillarDocument?.id)
                    .map((doc) => (
                      <a
                        href={
                          doc.path === "/"
                            ? `/${pillar}`
                            : `/${pillar}${typeof doc.path === "string" ? doc.path : `/${doc.id}`}`
                        }
                        class="group block p-6 bg-white border border-gray-200 rounded-xl hover:border-blue-500/50 hover:shadow-lg transition-all"
                      >
                        <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors mb-2">
                          {doc.title}
                        </h3>
                        {doc.fields?.excerpt && (
                          <p class="text-sm text-gray-600 line-clamp-2">
                            {doc.fields.excerpt}
                          </p>
                        )}
                      </a>
                    ))}
                </div>
              </section>
            )
          }
        </article>
      </div>
    </Container>
  </div>
</Layout>
