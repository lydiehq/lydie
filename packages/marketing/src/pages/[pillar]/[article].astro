---
export const prerender = false;

// ISR-like caching: CDN caches for 1 hour, serves stale for 24 hours while revalidating
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400",
);

import Layout from "@/layouts/Layout.astro";
import ArticleHeadingEnhancements from "@/components/ArticleHeadingEnhancements.astro";
import { Container } from "@/components/Container";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import PillarTOC from "@/components/PillarTOC.astro";
import * as lydieApi from "@/utils/lydie-client";
import { createLinkResolver } from "@/utils/route-registry";
import { articleTypographyClassName } from "@/utils/article-typography";
import { renderContent, blogImageComponent } from "@/utils/content-renderer";
import {
  flowchartComponent,
  pillarCalloutComponent,
} from "@/utils/custom-components";
import type { ContentNode } from "@lydie-app/sdk";

const { pillar, article } = Astro.params;

if (!pillar || !article) {
  return new Response(null, { status: 404 });
}

const pillarCollectionMap: Record<string, string> = {
  "knowledge-bases": lydieApi.collections.knowledgeBases,
  "note-taking": lydieApi.collections.noteTaking,
};

const collectionHandle = pillarCollectionMap[pillar] || pillar;

type ArticleDocument = Awaited<
  ReturnType<typeof lydieApi.getCollectionDocuments>
>["documents"][number] & {
  path?: string;
  toc?: Array<{ id: string; level: number; text: string }>;
  related?: Array<{
    id: string;
    title: string;
    path?: string;
    fields?: { slug?: string };
  }>;
};

type PillarDocument = Awaited<
  ReturnType<typeof lydieApi.getCollectionDocuments>
>["documents"][number] & {
  path?: string;
  toc?: Array<{ id: string; level: number; text: string }>;
};

let articleDocument: ArticleDocument | null = null;
let pillarDocuments: PillarDocument[] = [];
let contentHtml = "";
let toc: Array<{ id: string; level: number; text: string }> = [];
const linkResolver = createLinkResolver({
  currentCollectionHandle: collectionHandle,
});

console.log(`[Resource Hub] Fetching article: ${collectionHandle}/${article}`);

try {
  const [{ documents: allDocuments }, { documents: filteredDocuments }] =
    await Promise.all([
      lydieApi.getCollectionDocuments(collectionHandle, {
        sortBy: "created_at",
        sortOrder: "asc",
      } as any),
      lydieApi.getCollectionDocuments(collectionHandle, {
        includeToc: true,
        includeRelated: true,
        filters: { slug: article },
      }),
    ]);

  articleDocument =
    (filteredDocuments[0] as ArticleDocument | undefined) || null;

  if (!articleDocument) {
    const routeDocument = await lydieApi.getCollectionDocumentByRoute(
      collectionHandle,
      `/${article}`,
      {
        includeToc: true,
        includeRelated: true,
      },
    );

    const routeArticle = routeDocument as ArticleDocument;
    articleDocument = routeArticle.path === "/" ? null : routeArticle;
  }

  if (!articleDocument) {
    throw new Error("Article not found");
  }

  toc = articleDocument.toc || [];
  pillarDocuments = allDocuments.map((doc) =>
    doc.id === articleDocument?.id ? { ...doc, toc } : doc,
  );

  const { html } = await renderContent(
    articleDocument.jsonContent as ContentNode,
    {
      components: {
        image: blogImageComponent,
        pillarCallout: pillarCalloutComponent,
        flowchart: flowchartComponent,
      },
      linkResolver,
    },
  );
  contentHtml = html;
} catch (error) {
  console.error(`[Resource Hub] Failed to fetch article ${article}:`, error);
  return new Response(null, { status: 404 });
}
---

<Layout
  title={articleDocument?.title || "Article"}
  description={String(
    articleDocument?.fields?.description || articleDocument?.title || "Article",
  )}
>
  <div class="py-8">
    <Container>
      <Breadcrumbs
        items={[
          { label: "Home", href: "/" },
          { label: pillar.replace(/-/g, " "), href: `/${pillar}` },
          { label: articleDocument.title },
        ]}
      />

      <div class="flex gap-8 mt-8">
        {
          pillarDocuments.length > 0 && articleDocument && (
            <aside class="hidden lg:block w-72 shrink-0">
              <PillarTOC
                documents={pillarDocuments}
                currentDocumentId={articleDocument.id}
                pillar={pillar}
              />
            </aside>
          )
        }

        {/* Main Content */}
        <article class="flex-1 max-w-3xl">
          <header class="mb-8">
            <h1 class="text-3xl font-semibold text-gray-900">
              {articleDocument?.title}
            </h1>
            {
              articleDocument?.fields?.description && (
                <p class="text-lg text-gray-600 mt-4">
                  {articleDocument.fields?.description}
                </p>
              )
            }
          </header>

          <div class={articleTypographyClassName}>
            <Fragment set:html={contentHtml} />
          </div>
          <ArticleHeadingEnhancements />

          {/* Related Articles */}
          {
            articleDocument?.related && articleDocument.related.length > 0 && (
              <section class="mt-16 pt-8 border-t border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">
                  Related Articles
                </h2>
                <div class="grid gap-4">
                  {articleDocument.related.map((doc) => (
                    <a
                      href={
                        doc.path === "/"
                          ? `/${pillar}`
                          : `/${pillar}${typeof doc.path === "string" ? doc.path : `/${doc.id}`}`
                      }
                      class="group block p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-500/50 hover:shadow-md transition-all"
                    >
                      <h3 class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors">
                        {doc.title}
                      </h3>
                    </a>
                  ))}
                </div>
              </section>
            )
          }
        </article>
      </div>
    </Container>
  </div>
</Layout>
