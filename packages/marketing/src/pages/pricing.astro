---
import Layout from "../layouts/Layout.astro";
import { Container } from "../components/Container";
import { Button } from "../components/generic/Button";
import { Eyebrow } from "../components/landing/Eyebrow";
import { Check, ChevronRight, Github, Server } from "lucide-react";

const pricingTiers = [
  {
    name: "Free",
    price: "$0",
    period: "forever",
    description: "Perfect for getting started",
    features: ["Unlimited documents"],
    cta: "Get started",
    ctaHref: "https://app.lydie.co/auth",
    popular: false,
  },
  {
    name: "Pro",
    price: "$20",
    period: "per month",
    description: "For power users and teams",
    features: ["Everything in Free", "AI-powered search", "API access"],
    cta: "Get started",
    ctaHref: "https://app.lydie.co/auth",
    popular: true,
  },
];
---

<Layout
  title="Pricing - Lydie"
  description="Simple, transparent pricing for everyone. Start free, upgrade when you need more."
>
  <div class="flex flex-col gap-y-16 py-12 md:py-20">
    <Container className="flex flex-col gap-y-6 text-center">
      <Eyebrow>Pricing</Eyebrow>
      <h1
        class="text-4xl md:text-5xl font-heading font-medium tracking-tight text-gray-800"
      >
        Simple, transparent pricing
      </h1>
      <p
        class="text-[15px]/relaxed text-gray-600 max-w-2xl mx-auto text-balance"
      >
        Start free and upgrade when you need more. No hidden fees, no surprises.
      </p>
    </Container>

    <Container className="flex flex-col gap-y-8">
      <div class="grid md:grid-cols-2 gap-6">
        {
          pricingTiers.map((tier) => (
            <div
              class={`flex flex-col gap-y-6 p-6 rounded-2xl border ${
                tier.popular
                  ? "border-gray-800 ring-2 ring-gray-800/10 bg-gray-50/50"
                  : "border-gray-200 bg-white"
              }`}
            >
              {tier.popular && (
                <div class="text-xs font-medium text-gray-800 bg-gray-200 px-2 py-1 rounded-full w-fit">
                  Most popular
                </div>
              )}
              <div class="flex flex-col gap-y-1">
                <h3 class="text-xl font-medium text-gray-900">{tier.name}</h3>
                <p class="text-sm text-gray-600">{tier.description}</p>
              </div>
              <div class="flex items-baseline gap-x-1">
                <span class="text-4xl font-medium text-gray-900">
                  {tier.price}
                </span>
                {tier.period && (
                  <span class="text-sm text-gray-600">{tier.period}</span>
                )}
              </div>
              <Button
                href={tier.ctaHref}
                size="lg"
                intent={tier.popular ? "primary" : "secondary"}
                className="w-full"
              >
                <div class="flex items-center justify-center gap-x-1">
                  <span>{tier.cta}</span>
                  <ChevronRight className="size-3.5 translate-y-px group-hover:translate-x-0.5 transition-transform duration-200" />
                </div>
              </Button>
              <hr class="border-gray-200" />
              <ul class="flex flex-col gap-y-3">
                {tier.features.map((feature) => (
                  <li class="flex items-start gap-x-2">
                    <Check className="size-4 text-gray-700 mt-0.5 shrink-0" />
                    <span class="text-sm text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </Container>

    <Container className="flex flex-col gap-y-8">
      <div
        class="flex flex-col gap-y-6 p-8 rounded-2xl border border-gray-200 bg-linear-to-br from-gray-50 to-white"
      >
        <div class="flex items-center justify-center gap-x-2 mb-2">
          <Server className="size-5 text-gray-700" />
          <h2
            class="text-2xl font-heading font-medium tracking-tight text-gray-800"
          >
            Self-hosted
          </h2>
        </div>
        <p
          class="text-[15px]/relaxed text-gray-600 max-w-2xl mx-auto text-center text-balance"
        >
          Prefer to host Lydie on your own infrastructure? Self-hosting gives
          you full control over your data and deployment. Perfect for
          enterprises and privacy-conscious teams.
        </p>
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-4 mt-4"
        >
          <Button
            href="https://github.com/lydiqhq/lydie"
            size="lg"
            intent="secondary"
            target="_blank"
          >
            <div class="flex items-center gap-x-1.5">
              <Github className="size-3.5" />
              <span>View on GitHub</span>
            </div>
          </Button>
          <Button
            href="https://github.com/lydiqhq/lydie#readme"
            size="lg"
            intent="ghost"
            target="_blank"
          >
            <div class="flex items-center gap-x-1">
              <span>Documentation</span>
              <ChevronRight
                className="size-3.5 translate-y-px group-hover:translate-x-0.5 transition-transform duration-200"
              />
            </div>
          </Button>
        </div>
        <div
          class="grid md:grid-cols-3 gap-6 mt-6 pt-6 border-t border-gray-200"
        >
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">Full control</h3>
            <p class="text-sm text-gray-600">
              Deploy on your own servers with complete data sovereignty
            </p>
          </div>
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">Open source</h3>
            <p class="text-sm text-gray-600">
              MIT licensed. Inspect, modify, and contribute to the codebase
            </p>
          </div>
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">No limits</h3>
            <p class="text-sm text-gray-600">
              Scale to your needs without subscription constraints
            </p>
          </div>
        </div>
      </div>
    </Container>

