---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import { PricingSection } from "../components/PricingSection";
import { Button } from "../components/generic/Button";
import { Eyebrow } from "../components/landing/Eyebrow";
import {
  ChevronRightRegular,
  ServerRegular,
} from "@fluentui/react-icons";

import { GitHubIcon } from "../components/icons";
---

<Layout
  title="Pricing - Lydie"
  description="Simple, transparent pricing for everyone. Start free, upgrade when you need more."
>
  <div class="flex flex-col gap-y-16 py-12 md:py-20">
    <Container className="flex flex-col gap-y-6 text-center">
      <Eyebrow>Pricing</Eyebrow>
      <h1
        class="text-4xl md:text-5xl font-heading font-medium tracking-tight text-gray-800"
      >
        Simple, transparent pricing
      </h1>
      <p
        class="text-[15px]/relaxed text-gray-600 max-w-2xl mx-auto text-balance"
      >
        Start free and upgrade when you need more. Credits refresh monthly.
      </p>
    </Container>

    <Container>
      <PricingSection client:load />
    </Container>

    <Container className="flex flex-col gap-y-8">
      <div
        class="flex flex-col gap-y-6 p-8 rounded-2xl border border-gray-200 bg-linear-to-br from-gray-50 to-white"
      >
        <div class="flex items-center justify-center gap-x-2 mb-2">
          <ServerRegular className="size-5 text-gray-700" />
          <h2
            class="text-2xl font-heading font-medium tracking-tight text-gray-800"
          >
            Self-hosted
          </h2>
        </div>
        <p
          class="text-[15px]/relaxed text-gray-600 max-w-2xl mx-auto text-center text-balance"
        >
          Prefer to host Lydie on your own infrastructure? Self-hosting gives
          you full control over your data and deployment. Perfect for
          enterprises and privacy-conscious teams.
        </p>
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-4 mt-4"
        >
          <Button
            href="https://github.com/lydiehq/lydie"
            size="lg"
            intent="secondary"
            target="_blank"
          >
            <div class="flex items-center gap-x-1.5">
              <GitHubIcon className="size-3.5" />
              <span>View on GitHub</span>
            </div>
          </Button>
          <Button
            href="https://github.com/lydiehq/lydie#readme"
            size="lg"
            intent="ghost"
            target="_blank"
          >
            <div class="flex items-center gap-x-1">
              <span>Documentation</span>
              <ChevronRightRegular
                className="size-3.5 translate-y-px group-hover:translate-x-0.5 transition-transform duration-200"
              />
            </div>
          </Button>
        </div>
        <div
          class="grid md:grid-cols-3 gap-6 mt-6 pt-6 border-t border-gray-200"
        >
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">Full control</h3>
            <p class="text-sm text-gray-600">
              Deploy on your own servers with complete data sovereignty
            </p>
          </div>
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">Open source</h3>
            <p class="text-sm text-gray-600">
              MIT licensed. Inspect, modify, and contribute to the codebase
            </p>
          </div>
          <div class="flex flex-col gap-y-2 text-center">
            <h3 class="font-medium text-[15px] text-gray-900">No limits</h3>
            <p class="text-sm text-gray-600">
              Scale to your needs without subscription constraints
            </p>
          </div>
        </div>
      </div>
    </Container>
  </div>
</Layout>
