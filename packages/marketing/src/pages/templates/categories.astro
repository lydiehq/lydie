---
export const prerender = false;

// ISR-like caching: CDN caches for 24 hours, serves stale for 7 days while revalidating
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=3600, s-maxage=86400, stale-while-revalidate=604800",
);

import Layout from "../../layouts/Layout.astro";
import { Container } from "../../components/Container";
import { Button } from "../../components/generic/Button";
import CategoryThumbnail from "../../components/templates/CategoryThumbnail.astro";
import { getCategoryTreeFromDb } from "../../data/categories";

const categoryTree = await getCategoryTreeFromDb();
---

<Layout
  title="Template Categories - Lydie"
  description="Browse all template categories to find the perfect template for your needs."
>
  <div class="py-8">
    <Container className="flex flex-col gap-y-8">
      <div class="flex flex-col gap-y-8">
        <a href="/templates" class="text-sm text-gray-500 hover:text-gray-900"
          >Back to templates</a
        >
        <header class="">
          <div class="max-w-lg flex flex-col gap-y-3">
            <h1 class="text-4xl font-medium text-gray-900">All Categories</h1>
            <span class="text-base/relaxed text-gray-600"
              >Explore our template categories organized by topic to find the
              perfect template for your project.</span
            >
          </div>
        </header>
      </div>
      <div class="flex flex-col gap-y-8">
        {
          categoryTree.map((category) => (
            <div class="flex flex-col gap-y-4">
              <div class="flex flex-col gap-y-2">
                <a
                  href={
                    category.path || `/templates/categories/${category.slug}`
                  }
                  class="text-2xl font-medium text-gray-900 hover:text-gray-700 transition-colors"
                >
                  {category.name}
                </a>
              </div>
              {category.children && category.children.length > 0 && (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                  {category.children.map((subcat) => (
                    <CategoryThumbnail category={subcat} />
                  ))}
                </div>
              )}
            </div>
          ))
        }
      </div>
    </Container>
  </div>
</Layout>
