---
import { Container } from "../../components/Container";
import Layout from "../../layouts/Layout.astro";
import { integrations } from "../../utils/integrations";

const templates = [
  {
    id: "software-developer-resume",
    title: "Software Developer Resume Template",
    description: "A professional resume template for software developers.",
  },
];
---

<Layout
  title="Integrations - Lydie"
  description="Integrations for Lydie. Connect your documents to external platforms."
>
  <Container className="flex flex-col gap-y-12">
    <div class="flex flex-col gap-y-4">
      <h1
        class="text-2xl font-heading font-medium tracking-tight text-gray-800"
      >
        Templates
      </h1>
      <p class="text-[15px]/relaxed text-gray-600 max-w-[65ch] text-balance">
        Browse our collection of templates for your next document.
      </p>
    </div>
    <section>
      <ul>
        {
          templates.map((template) => (
            <li>
              <a href={`/templates/${template.id}`}>{template.title}</a>
            </li>
          ))
        }
      </ul>
    </section>
  </Container>
</Layout>
