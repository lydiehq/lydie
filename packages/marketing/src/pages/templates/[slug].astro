---
import Layout from "../../layouts/Layout.astro";
import { Container } from "../../components/Container";
import FormattedDate from "../../components/FormattedDate.astro";
import { Logo } from "../../components/Logo";
import { Button } from "../../components/generic/Button";

export async function getStaticPaths() {
  try {
    return [
      {
        params: { slug: "resume" },
      },
    ];
  } catch (error) {
    console.error("Failed to fetch documents for static paths:", error);
    // Return empty array to prevent build failure
    return [];
  }
}

const templateName = "Developer Resume Template";
const categories = ["Resume", "Professional", "Developer"];
---

<Layout
  title="Lydie Blog"
  description="A minimal, powerful writing environment supercharged with AI."
>
  <div class="py-8">
    <Container className="flex flex-col gap-y-8">
      <div class="flex flex-col gap-y-8">
        <a href="/templates" class="text-sm text-gray-500 hover:text-gray-900"
          >Back to templates</a
        >
        <header class="">
          <div class="max-w-lg flex flex-col gap-y-3">
            <div class="flex gap-x-2 items-center">
              <div
                class="size-7 rounded-full bg-gray-100 ring ring-black/8 flex items-center justify-center overflow-hidden"
              >
                <Logo className="size-4 text-gray-800" />
              </div>
              <span class="text-sm font-medium text-gray-900">Lydie</span>
              <svg
                class="w-4 h-4 text-blue-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>

            <h1 class="text-4xl font-medium text-gray-900">{templateName}</h1>
            <span class="text-base/relaxed text-gray-600"
              >Lorem ipsum dolor sit amet consectetur adipisicing elit. Ut vel
              quia officia nemo at ex sed deserunt qui eos molestiae.</span
            >
            <div class="flex flex-wrap gap-2">
              {
                categories.map((category) => (
                  <a
                    href="#"
                    class="px-3 py-1 text-sm font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 transition-colors"
                  >
                    {category}
                  </a>
                ))
              }
            </div>

            <div class="flex gap-x-1">
              <Button className="self-start" size="lg">Get template</Button>
              Share
            </div>
          </div>
        </header>
      </div>

      <div
        class="flex gap-x-4 bg-[#f8f8f8] rounded-xl border border-black/8 shadow-inner p-1"
      >
        <div class="h-[600px] w-[200px] shrink-0 flex"></div>
        <div class="bg-white ring ring-black/6 rounded-lg w-full grow p-4">
          Template content here
        </div>
      </div>

      <div class="max-w-3xl flex flex-col gap-y-8 mt-12">
        <section class="prose prose-gray max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            About This {templateName}
          </h2>
          <div class="text-base/relaxed text-gray-700 space-y-4">
            <p>
              This professional {templateName.toLowerCase()} is designed to help developers
              showcase their skills, experience, and achievements in a clear and compelling
              format. Whether you're a seasoned developer or just starting your career,
              this template provides a solid foundation for creating a standout resume
              that gets noticed by recruiters and hiring managers.
            </p>
            <p>
              The template follows industry best practices for resume
              formatting, ensuring your information is presented in a way that's
              both visually appealing and easy to scan. With a clean, modern
              design, your resume will stand out while maintaining a
              professional appearance that's appropriate for any tech role.
            </p>
          </div>
        </section>

        <section class="prose prose-gray max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            Key Features
          </h2>
          <ul
            class="text-base/relaxed text-gray-700 space-y-2 list-disc list-inside"
          >
            <li>Clean, modern design that's ATS-friendly</li>
            <li>Well-organized sections for easy navigation</li>
            <li>Professional typography and spacing</li>
            <li>Optimized for both print and digital formats</li>
            <li>Easy to customize and personalize</li>
          </ul>
        </section>

        <section class="prose prose-gray max-w-none">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">
            How to Use This Template
          </h2>
          <div class="text-base/relaxed text-gray-700 space-y-4">
            <p>
              To get started with this template, simply download it and open it
              in your preferred document editor. Replace the placeholder content
              with your own information, making sure to highlight your relevant
              experience, technical skills, and achievements. Be specific about
              your accomplishments, using metrics and concrete examples wherever
              possible.
            </p>
            <p>
              Remember to tailor your resume for each job application,
              emphasizing the skills and experiences that are most relevant to
              the position you're applying for. Keep your language clear and
              concise, and proofread carefully to ensure there are no errors.
            </p>
          </div>
        </section>
      </div>
    </Container>
  </div>
</Layout>
