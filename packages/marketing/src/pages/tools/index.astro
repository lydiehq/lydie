---
import Layout from "../../layouts/Layout.astro";
import { Container } from "../../components/Container";
import { freeTools } from "../../data/tools";
---

<Layout
  title="Free Writing Tools - Lydie"
  description="Free writing and text analysis tools to improve your content."
>
  <Container className="py-12 max-w-4xl">
    <div class="space-y-8">
      <div class="text-center space-y-4">
        <h1 class="text-4xl font-heading font-bold text-gray-900">
          Free Writing Tools
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Enhance your writing with our collection of free text analysis and
          writing tools.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-2">
        {
          freeTools.map((tool) => (
            <a
              href={tool.href}
              class="block p-6 bg-white border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-md transition-all"
            >
              <div class="space-y-2">
                <h2 class="text-2xl font-semibold text-gray-900">
                  {tool.title}
                </h2>
                <p class="text-gray-600">{tool.description}</p>
                <div class="pt-2">
                  <span class="text-sm text-gray-500 hover:text-gray-700">
                    Try it now â†’
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </Container>
</Layout>
