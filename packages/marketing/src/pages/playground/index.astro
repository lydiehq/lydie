---
import Layout from "../../layouts/Layout.astro";
import { Container } from "../../components/Container";
import { CastShadowPlayground } from "../../components/playground/CastShadowPlayground";

export const prerender = true;
---

<Layout
  title="Cast Shadow Playground | Lydie"
  description="Experimental playground for the CastShadow component"
>
  <meta name="robots" content="noindex, nofollow" slot="head" />
  <Container className="py-12">
    <div class="flex flex-col gap-y-8">
      <div>
        <h1 class="text-2xl font-medium text-gray-900">
          Cast Shadow Playground
        </h1>
        <p class="text-gray-600 mt-2">
          Experimental page for testing and refining the cast shadow effect.
        </p>
      </div>
      <CastShadowPlayground client:load />
    </div>
  </Container>
</Layout>
