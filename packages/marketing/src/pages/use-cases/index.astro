---
import Container from "../../components/Container.astro";
import Layout from "../../layouts/Layout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { ArrowRightRegular } from "@fluentui/react-icons";
import { GradientOutline } from "src/components/generic/GradientOutline";
import { SectionHeader } from "src/components/landing/SectionHeader";
import { CTASection } from "src/components/landing/CTASection";
import { useCases } from "src/data/use-cases";

const title = "Use Cases - Lydie";
const description =
  "Discover how Lydie adapts to your needs. Build a personal knowledge base or manage team documentation with one flexible tool.";
---

<Layout title={title} description={description}>
  <Container className="flex flex-col gap-y-16 pb-16">
    <Breadcrumbs items={[{ label: "Use Cases" }]} />
    <div class="flex flex-col gap-y-6 relative p-4">
      <GradientOutline />
      <SectionHeader
        className="max-w-lg"
        title="From personal thinking to team knowledge"
        description="Capture, organize, and share knowledge. One tool that works for personal notes or full team documentation."
      />
    </div>

    <div class="max-w-6xl mx-auto w-full">
      <div class="grid md:grid-cols-3 gap-8">
        {
          useCases.map((useCase) => {
            return (
              <a
                href={`/use-cases/${useCase.slug}`}
                class="group flex flex-col gap-y-4 p-6 rounded-xl border border-gray-200 bg-white hover:border-gray-300 hover:shadow-md transition-all duration-200"
              >
                <div class="flex flex-col gap-y-2">
                  <h3 class="text-xl font-semibold text-gray-900 group-hover:text-gray-950 transition-colors">
                    {useCase.title}
                  </h3>
                  <p class="text-gray-600 text-[15px]/relaxed">
                    {useCase.description}
                  </p>
                </div>
                <div class="flex items-center gap-x-1 text-sm font-medium text-gray-900 group-hover:text-gray-700 transition-colors mt-auto">
                  <span>Learn more</span>
                  <ArrowRightRegular className="size-4 group-hover:translate-x-0.5 transition-transform" />
                </div>
              </a>
            );
          })
        }
      </div>
    </div>
  </Container>
  <CTASection client:load />
</Layout>
