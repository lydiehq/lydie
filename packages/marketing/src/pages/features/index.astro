---
import { Container } from "../../components/Container";
import Layout from "../../layouts/Layout.astro";
import { features } from "../../utils/features";
---

<Layout
  title="Features - Lydie"
  description="Discover the features that make Lydie a powerful writing environment."
>
  <Container className="flex flex-col gap-y-12 py-8 md:py-12">
    <div class="flex flex-col gap-y-4">
      <h1
        class="text-2xl font-heading font-medium tracking-tight text-gray-800"
      >
        Features
      </h1>
      <p class="text-[15px]/relaxed text-gray-600 max-w-[65ch] text-balance">
        Lydie is built with powerful features that make writing and
        collaboration effortless. Explore what makes Lydie a modern writing
        environment.

        <br />
        <br />
        Have a feature request? <a
          href="https://github.com/lsalling/lydie/issues/new?labels=feature&title=Feature+Request%3A+"
          target="_blank"
          class="text-gray-900 hover:text-gray-800 transition-colors"
          >Let us know</a
        >.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        features.map((feature) => (
          <a
            href={feature.href}
            class="flex flex-col gap-y-3 p-4 rounded-xl border border-gray-200 bg-white hover:border-gray-300 transition-all group"
          >
            <div class="flex flex-col gap-y-1">
              <h3 class="text-base font-medium text-gray-900 group-hover:text-gray-800">
                {feature.title}
              </h3>
              <p class="text-[0.8125rem] text-gray-600">
                {feature.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </Container>
</Layout>
