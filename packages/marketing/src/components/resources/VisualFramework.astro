---
interface Props {
  title: string;
  description?: string;
  className?: string;
}

const { title, description, className = "" } = Astro.props;
---

<div class:list={["bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-100 rounded-2xl p-8", className]}>
  <div class="flex items-center gap-3 mb-4">
    <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
    <span class="text-sm font-medium text-blue-600 uppercase tracking-wide">Visual Framework</span>
  </div>
  <h3 class="text-xl font-semibold text-black mb-2">{title}</h3>
  {description && <p class="text-black/60">{description}</p>}
  <div class="mt-6 bg-white/60 backdrop-blur rounded-xl border border-blue-100/50 p-6">
    <slot />
  </div>
</div>
