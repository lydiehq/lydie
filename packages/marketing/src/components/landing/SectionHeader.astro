---
import { clsx } from "clsx";
import Heading from "../generic/Heading.astro";
import { Eyebrow } from "./Eyebrow";

type Props = {
  eyebrow?: string;
  title: string;
  description?: string;
  centered?: boolean;
  className?: string;
};

const {
  eyebrow,
  title,
  description,
  centered = false,
  className,
} = Astro.props;
---

<div
  class={clsx(
    "flex flex-col gap-y-2",
    centered && "items-center text-center",
    className,
  )}
>
  {eyebrow && <Eyebrow>{eyebrow}</Eyebrow>}
  <Heading level={2}>{title}</Heading>
  {
    description && (
      <p class="text-base/relaxed text-black/60 text-balance">{description}</p>
    )
  }
</div>
