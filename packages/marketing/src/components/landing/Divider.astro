---
import { Logo } from "../Logo";

interface Props {
  logo?: boolean;
}

const { logo = false } = Astro.props;
---

<div class="flex items-center w-full max-w-5xl mx-auto" role="presentation">
  <hr
    class="flex-1 border-0 h-px bg-linear-to-r from-transparent to-outline-subtle from-0% to-15%"
  />
  {
    logo && (
      <div class="rounded-full p-1.5 bg-[#f9f9f9]">
        <Logo className="text-outline-subtle size-4 shrink-0" />
      </div>
    )
  }
  <hr
    class="flex-1 border-0 h-px bg-linear-to-r from-outline-subtle to-transparent from-85% to-100%"
  />
</div>
