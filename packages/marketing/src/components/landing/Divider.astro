---
import { Logo } from "../Logo";

interface Props {
  logo?: boolean;
}

const { logo = false } = Astro.props;
---

<div
  class="flex items-center gap-2 w-full max-w-5xl mx-auto"
  role="presentation"
>
  <hr class="flex-1 border-0 h-px bg-linear-to-r from-transparent to-black/6 from-0% to-15%" />
  {logo && <Logo className="text-black/6 size-4 shrink-0" />}
  <hr class="flex-1 border-0 h-px bg-linear-to-r from-black/6 to-transparent from-85% to-100%" />
</div>
