---
import { Container } from "../Container";
import { CastShadow } from "../generic/CastShadow";
import { GradientOutline } from "../generic/GradientOutline";
import Key from "./Key.astro";

const menuSections = [
  {
    title: "Favorites",
    items: [
      {
        label: "Create new document",
        pathD: "M12 4v16m8-8H4",
      },
      {
        label: "Publish document",
        pathD: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12",
      },
    ],
  },
  {
    title: "Navigation",
    items: [
      {
        label: "Search documents",
        pathD: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z",
        selected: true,
      },
      {
        label: "Go home",
        pathD:
          "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6",
      },
      {
        label: "Go to assistant",
        pathD:
          "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
      },
      {
        label: "Go to settings",
        pathD: [
          "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z",
          "M15 12a3 3 0 11-6 0 3 3 0 016 0z",
        ],
      },
      {
        label: "Go to integrations",
        pathD: "M13 10V3L4 14h7v7l9-11h-7z",
      },
    ],
  },
];
---

<Container className="py-16">
  <div class="flex flex-col items-center gap-y-6">
    <!-- Eyebrow and heading -->
    <div class="flex flex-col items-center text-center gap-y-3">
      <span class="text-[0.8125rem] font-medium text-black/50">
        Keyboard shortcuts
      </span>
      <h2 class="text-3xl tracking-tight font-medium text-black/85">
        Everything at your fingertips
      </h2>
      <p class="text-base/relaxed text-black/60 max-w-md text-balance">
        Press <span class="font-medium text-black/80">⌘K</span> to search, navigate,
        and access any feature instantly.
      </p>
    </div>

    <div class="relative w-full md:w-[1200px] h-[400px] overflow-visible">
      <div class="relative w-full h-full">
        <div
          class="md:absolute md:left-1/2 md:-translate-x-1/2 md:top-1/2 md:-translate-y-1/2 relative"
        >
          <CastShadow className="w-full" strength={0.2}>
            <div
              class="flex flex-col w-full md:w-[440px] h-[320px] rounded-xl shadow-legit bg-gray-50 relative"
            >
              <GradientOutline />

              <div
                class="flex items-center border-b border-gray-200 px-3 bg-white rounded-t-xl"
              >
                <svg
                  class="size-4 text-gray-400 mr-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <input
                  type="text"
                  placeholder="Type a command or search..."
                  class="flex h-11 w-full border-none bg-transparent py-3 text-sm outline-none placeholder:text-gray-400"
                  readonly
                />
              </div>

              <div class="flex-1 overflow-y-auto p-2">
                {
                  menuSections.map((section, sectionIndex) => (
                    <Fragment>
                      <div
                        class={
                          sectionIndex === 0
                            ? "px-2 py-1.5 text-xs font-medium text-gray-500"
                            : "px-2 py-1.5 text-xs font-medium text-gray-500 mt-2"
                        }
                      >
                        {section.title}
                      </div>
                      {section.items.map((item) => (
                        <div
                          class={
                            item.selected
                              ? "flex items-center rounded-lg px-3 py-2.5 text-sm text-gray-800 bg-gray-100"
                              : "flex items-center rounded-lg px-3 py-2.5 text-sm text-gray-800 hover:bg-gray-100 cursor-pointer"
                          }
                        >
                          <svg
                            class="size-4 text-gray-400 mr-2"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                          >
                            {(Array.isArray(item.pathD)
                              ? item.pathD
                              : [item.pathD]
                            ).map((d) => (
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d={d}
                              />
                            ))}
                          </svg>
                          <span>{item.label}</span>
                        </div>
                      ))}
                    </Fragment>
                  ))
                }
              </div>

              <!-- Keyboard help footer -->
              <div
                class="flex items-center justify-between border-t border-gray-200 px-3 py-2 bg-white text-xs text-gray-500 rounded-b-xl"
              >
                <div class="flex items-center gap-2">
                  <span class="flex items-center gap-1">
                    <kbd
                      class="px-1.5 py-0.5 bg-gray-100 rounded text-gray-600 font-sans"
                      >↵</kbd
                    >
                    <span>to select</span>
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="flex items-center gap-1">
                    <kbd
                      class="px-1.5 py-0.5 bg-gray-100 rounded text-gray-600 font-sans"
                      >↑↓</kbd
                    >
                    <span>to navigate</span>
                  </span>
                </div>
              </div>
            </div>
          </CastShadow>
        </div>

        <!-- Scattered keys around CMD+K - positioned to avoid overlapping with center element -->

        <!-- CMD+K - highlighted in center -->
        <div class="absolute z-10" style="left: 515px; top: 390px;">
          <Key label="⌘" width="cmd" isHighlighted={true} rotate={-15} />
        </div>
        <div class="absolute z-10" style="right: 520px; top: 405px;">
          <Key label="K" isHighlighted={true} rotate={9} />
        </div>

        <!-- Scattered keys – balanced left/right -->
        <div class="absolute" style="left: -60px; top: -150px;">
          <Key label="Q" rotate={-15} />
        </div>
        <div class="absolute" style="left: 180px; top: -120px;">
          <Key label="T" rotate={-8} />
        </div>
        <div class="absolute" style="left: 1040px; top: -100px;">
          <Key label="P" rotate={20} />
        </div>

        <div class="absolute" style="right: -100px; top: 10px;">
          <Key label="0" rotate={-6} />
        </div>

        <div class="absolute" style="left: 220px; top: 30px;">
          <Key label="Tab" width="cmd" rotate={-20} />
        </div>
        <div class="absolute" style="left: 120px; top: 120px;">
          <Key label="D" rotate={-16} />
        </div>
        <div class="absolute" style="left: 280px; top: 130px;">
          <Key label="G" rotate={8} />
        </div>

        <div class="absolute" style="right: 260px; top: 110px;">
          <Key label="J" rotate={-14} />
        </div>
        <div class="absolute" style="right: 80px; top: 180px;">
          <Key label="L" rotate={-28} />
        </div>
        <div class="absolute" style="left: 100px; top: 280px;">
          <Key label="Z" rotate={15} />
        </div>
        <div class="absolute" style="right: -100px; top: 160px;">
          <Key label="Enter" width="wide" rotate={6} />
        </div>

        <div class="absolute" style="left: 270px; top: 360px;">
          <Key label="Ctrl" width="cmd" rotate={-15} />
        </div>
        <div class="absolute" style="left: 1020px; top: 360px;">
          <Key label="Alt" width="cmd" rotate={-8} />
        </div>
        <div class="absolute" style="left: 1120px; top: 260px;">
          <Key label="Fn" width="fn" rotate={18} />
        </div>
      </div>
    </div>
  </div>
</Container>
