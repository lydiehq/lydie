---
import { freeTools } from "../../data/tools";

interface Props {
  /** Current tool href (e.g. /tools/text-summarizer or /tools/convert) so we exclude it from the list */
  currentHref: string;
}

const { currentHref } = Astro.props;
const otherTools = freeTools.filter((tool) => tool.href !== currentHref);
---

{
  otherTools.length > 0 && (
    <section class="mt-16 pt-12 border-t border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">
        See other free tools
      </h2>
      <p class="text-gray-600 mb-6">
        Explore more writing and text analysis tools, all free, no sign-up
        required.
      </p>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {otherTools.map((tool) => (
          <a
            href={tool.href}
            class="block p-4 bg-white border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-md transition-all"
          >
            <h3 class="font-semibold text-gray-900 mb-1">{tool.title}</h3>
            <p class="text-sm text-gray-600">{tool.description}</p>
            <span class="mt-2 inline-block text-sm text-gray-500 hover:text-gray-700">
              Try it â†’
            </span>
          </a>
        ))}
      </div>
      <p class="mt-6">
        <a
          href="/tools"
          class="text-gray-600 hover:text-gray-900 font-medium inline-flex items-center gap-1"
        >
          View all free tools
          <svg
            class="size-4"
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </p>
    </section>
  )
}
