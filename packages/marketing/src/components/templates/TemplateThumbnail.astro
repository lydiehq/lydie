---
interface Props {
  name: string;
  index?: number;
  href?: string;
}

const { name, index = 0, href = "#" } = Astro.props;
---

<a href={href} class="flex flex-col gap-y-3">
  <div class="w-full aspect-video bg-gray-100 rounded-lg" />
  <h3 class="text-lg font-medium text-gray-900">
    {name}
  </h3>
</a>
