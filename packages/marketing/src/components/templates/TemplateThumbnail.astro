---
interface Props {
  name: string;
  description?: string;
  href?: string;
}

const { name, description, href = "#" } = Astro.props;
---

<a href={href} class="flex flex-col gap-y-3 group">
  <div class="w-full aspect-video bg-gray-100 rounded-lg border border-gray-200 group-hover:border-gray-300 transition-colors flex items-center justify-center">
    <div class="text-gray-400 text-sm">Preview</div>
  </div>
  <div class="flex flex-col gap-y-1">
    <h3 class="text-lg font-medium text-gray-900 group-hover:text-gray-700 transition-colors">
      {name}
    </h3>
    {description && (
      <p class="text-sm text-gray-600 line-clamp-2">
        {description}
      </p>
    )}
  </div>
</a>
