---
import { twMerge } from "tailwind-merge";

const sizeClasses: Record<string, string> = {
  sm: "max-w-3xl",
  xl: "max-w-xl",
  default: "max-w-232",
};

type Props = {
  className?: string;
  size?: "sm" | "xl";
};

const { className, size } = Astro.props;
const maxWidth = size ? sizeClasses[size] : sizeClasses.default;
---

<div class={twMerge(maxWidth, "mx-auto lg:px-0 px-4 w-full", className)}>
  <slot />
</div>
