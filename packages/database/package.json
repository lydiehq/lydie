{
  "name": "@lydie/database",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:push": "bun sst shell drizzle-kit push",
    "db:studio": "bun sst shell bunx drizzle-kit studio",
    "db:sync-zero-publication": "bun sst shell bun run src/sync-zero-publication.ts",
    "db:upgrade-user": "sst shell bun run src/scripts/upgrade-user.ts",
    "db:embed-all-documents": "sst shell bun run src/scripts/embed-all-documents.ts",
    "db:seed:template-categories": "sst shell bun run src/scripts/seed-template-categories.ts",
    "db:backfill-collection-metadata": "sst shell bun run src/scripts/backfill-collection-metadata.ts"
  },
  "dependencies": {
    "@lydie/core": "workspace:*",
    "drizzle-kit": "^1.0.0-beta.9-e89174b",
    "drizzle-orm": "catalog:",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^25.3.0"
  }
}
